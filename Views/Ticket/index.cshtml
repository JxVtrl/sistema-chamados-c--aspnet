@model IEnumerable<ChamadosTecnicos.Models.Ticket>

@{
    ViewData["Title"] = "Lista de Chamados";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Novo Chamado</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Título</th>
            <th>Status</th>
            <th>Data de Criação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chamado in Model)
        {
            <tr>
                <td>@chamado.Titulo</td>
                <td>@chamado.Status</td>
                <td>@chamado.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@chamado.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@chamado.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
